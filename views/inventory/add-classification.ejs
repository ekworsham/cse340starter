<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
  <script>
    // Client-side validation: only letters and numbers, no spaces or special characters
    function validateForm(event) {
      const input = document.getElementById('classification_name');
      const value = input.value;
      const regex = /^[A-Za-z0-9]+$/;
      if (!regex.test(value)) {
        event.preventDefault();
        document.getElementById('clientError').textContent = "Classification name must not contain spaces or special characters.";
        input.focus();
        return false;
      }
      document.getElementById('clientError').textContent = "";
      return true;
    }
    window.onload = function() {
      document.getElementById('addClassificationForm').onsubmit = validateForm;
    }
  </script>
</head>
<body>
   <main>
    <h1><%= title %></h1>
    <% if (messages && messages.notice) { %>
      <% messages.notice.forEach(function(msg){ %>
        <div class="flash"><%= msg %></div>
      <% }) %>
    <% } %>
    <% if (typeof errors !== "undefined" && errors.length > 0) { %>
      <ul class="errors">
        <% errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
    <form id="addClassificationForm" action="/inv/add-classification" method="post" novalidate>
      <label for="classification_name">Classification Name</label>
      <input 
        type="text" 
        id="classification_name" 
        name="classification_name" 
        required 
        pattern="^[A-Za-z0-9]+$"
        title="No spaces or special characters allowed. Only letters and numbers."
        value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
      >
      <span id="clientError" style="color:red;"></span>
      <p class="form-direction">Classification name must not contain spaces or special characters.</p>
      <button type="submit">Add Classification</button>
    </form>
  </main>
</body>
</html>